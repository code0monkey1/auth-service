{
    "name": "template",
    "version": "1.0.0",
    "description": "generic template for creating nodejs project using typescript",
    "main": "index.js",
    "scripts": {
        "dev": "NODE_ENV=dev nodemon src/server.ts",
        "test": " NODE_ENV=test jest --watchAll  --runInBand  ",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "test:prod": "jest --runInBand",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky",
        "start": " NODE_ENV=prod ts-node src/index.ts",
        "typeorm": "typeorm-ts-node-commonjs"
    },
    "author": "Chiranjeev Thomas",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^16.11.10",
        "@types/supertest": "^6.0.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.1.0",
        "prettier": "3.2.5",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "10.9.1",
        "typescript": "4.5.2",
        "typescript-eslint": "^7.2.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-async-errors": "^3.1.1",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.0.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "nock": "^13.5.4",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "typeorm": "0.3.20",
        "winston": "^3.12.0"
    }
}
